html
  head
    title List all TO DO for #{username}
  body
    #container
      a(href='/add') Add the new todo
      table(border=1)
        tr
          th Content
          th Status
          th Delete
        each todo in todoes
          tr
            td=todo.content
            td
              if todo.status == 'Active'
                a(href='/done/#{todo._id}') Make it done
              else
                | #{todo.status}
            td
              a(href='/delete/#{todo._id}') Delete
            

